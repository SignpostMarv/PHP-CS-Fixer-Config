{
    "name": "signpostmarv/php-cs-fixer-config",
    "description": "PHP-CS-Fixer Config",
    "license": "ISC",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\CS\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run",
            "composer-require-checker check ./composer.json"
        ]
    },
    "require": {
        "php": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^0.1.6",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "povils/phpmnd": "^1.1",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^3.0",
        "vimeo/psalm": "^1.1"
    }
}
