{
    "name": "signpostmarv/php-cs-fixer-config",
    "description": "PHP-CS-Fixer Config",
    "license": "ISC",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\CS\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "composer install",
            "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --verbose --allow-risky=yes --dry-run .php_cs",
            "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --verbose --allow-risky=yes --dry-run",
            "php ./vendor/phpstan/phpstan/bin/phpstan analyse -l5 src",
            "php ./vendor/vimeo/psalm/bin/psalm src"
        ]
    },
    "require": {
        "php": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "require-dev": {
        "phpstan/phpstan": "dev-master",
        "vimeo/psalm": "dev-master"
    }
}
